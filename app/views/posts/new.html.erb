<h1>Create New Post</h1>

<%= form_with model: @post, url: user_posts_path, method: :post, local: true do |f| %>
<div>
    <div>
    <%= f.label :Post_title, require: true %><br>
    <%= f.text_field :title %>
    </div>

    <div>
    <%= f.label :Enter_text %><br>
    <%= f.text_area :text, rows: 10, require: true %>
    </div>
    <% @post.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <% end %>
    <div><%= f.submit "Create Post" %></div>
</div>
<% end %>
